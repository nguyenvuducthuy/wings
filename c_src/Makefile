include ../erl.mk

OS := $(shell uname -s)

LIBDIR = ../priv

ifeq ($(findstring CYGWIN,$(OS)),CYGWIN)
  USEMINGWGCC := true
  DEF_CC = mingw32-gcc
endif

ifdef MSYSTEM
 ifeq ($(MSYSTEM),$(filter $(MSYSTEM),MINGW32 MINGW64))
  USEMINGWGCC := true
  DEF_CC = gcc
 endif
else
 ifeq ($(WSLcross), true)
  UseMCL = true
 endif
endif

## UseMCL := $(shell cl.exe 2>&1 | grep Microsoft)

ifneq (x$(UseMCL),x)
  UseMCL = true
  USEMINGWGCC = false
  DEF_CC = cl.exe
endif

FRD = 'io:fwrite("~n=:~s~n",[code:root_dir()]),init:stop().'
ERL_DIR := $(shell echo $(FRD) | $(ERL) | sed -n '/^=:/s/^=://p')
ERL_INC = "$(ERL_DIR)/usr/include"

UNIVERSAL_FLAGS =
COMMON_CFLAGS = -Wall -g

ifeq ($(UseMCL),true)
 OUT = -Fe:
 OUT_OBJ = -Fo
 OBJ = obj
 SO_EXT = dll
 LIBS = -LD
 CFLAGS += -nologo -Zi -Ox /FS /MP -D__WIN32__
 CXXFLAGS += /EHsc
else
 OUT = -o
 OUT_OBJ = -o
 OBJ = o
 CFLAGS += $(COMMON_CFLAGS) -O3
 CXXFLAGS += -Wno-int-in-bool-context -Wno-sign-compare \
		-Wno-unused-local-typedefs -Wno-misleading-indentation \
		-Wno-deprecated-declarations -Wno-unknown-pragmas
 ifdef USEMINGWGCC
  SO_EXT = dll
  LIBS = -mdll
  GL_LIBS += -lopengl32 -lglu32
 else
  SO_EXT = so
  DEF_CC = $(CC)
  ifeq ($(OS),Darwin)
    CFLAGS = $(UNIVERSAL_FLAGS) $(COMMON_CFLAGS) -O3
    LIBS = $(UNIVERSAL_FLAGS) -bundle -flat_namespace -undefined suppress
    GL_LIBS =
  else
    LIBS = -shared -fpic
    CXX_LD = -lstdc++
    GL_LIBS += -L/usr/local/lib -lGLU -lGL
  endif
 endif
endif

ifeq ($(GCC),)
    GCC = $(DEF_CC)
endif

IGL_INCLUDE = -I../_deps/eigen -I../_deps/libigl/include

DRV = $(LIBDIR)/wings_pick_nif.$(SO_EXT) $(LIBDIR)/libigl.$(SO_EXT)

TARGET_FILES=$(DRV)

all: $(TARGET_FILES)

#libigl_wrapper.$(OBJ): libigl_wrapper.cpp libigl_nif.h
#	$(GCC) $(CFLAGS) -c -I$(ERL_INC) $(IGL_OPTS) $(IGL_INCLUDE) $(OUT_OBJ)$@ $<

$(LIBDIR)/libigl.$(SO_EXT): libigl.cpp
	install -d $(LIBDIR)
	$(GCC) $(CFLAGS) $(CXXFLAGS) $(IGL_OPTS) -I$(ERL_INC) $(IGL_INCLUDE) $(OUT)$@ $< $(LIBS) $(CXX_LD)

$(LIBDIR)/%.$(SO_EXT): %.c
	install -d $(LIBDIR)
	$(GCC) $(CFLAGS) -I$(ERL_INC) $(OUT) $@ $< $(LIBS) $(GL_LIBS)

clean:
	rm -f $(TARGET_FILES) vc*.pdb *.$(OBJ)
	rm -f core
